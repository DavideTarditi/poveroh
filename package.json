    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev",
        "dev-api": "turbo api",
        "lint": "turbo lint",
        "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && find . -name 'dist' -type d -prune -exec rm -rf '{}' + && find . -name '.next' -type d -prune -exec rm -rf '{}' + && find . -name 'package-lock.json' -type f -exec rm -f '{}' +",
